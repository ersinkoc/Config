{
  "name": "@oxog/config",
  "version": "1.0.0",
  "description": "Zero-dependency configuration loader with multi-format support and plugin extensibility",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./plugins": {
      "import": {
        "types": "./dist/plugins/index.d.ts",
        "default": "./dist/plugins/index.js"
      },
      "require": {
        "types": "./dist/plugins/index.d.cts",
        "default": "./dist/plugins/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "build:analyze": "npm run build && npm run size",
    "clean": "rm -rf dist",
    "dev": "npm run build:watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "size": "node scripts/analyze-bundle.js",
    "size:limit": "node scripts/check-bundle-size.js",
    "prepublishOnly": "npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "release": "npm run build && npm run test && npm run lint && npm run typecheck && npm publish",
    "release:dry-run": "npm run build && npm run test && npm run typecheck && npm publish --dry-run",
    "docs:build": "cd website && npm run build",
    "docs:dev": "cd website && npm run dev",
    "examples": "npx ts-node examples/01-basic/01-simple-load.ts",
    "check": "npm run lint && npm run typecheck && npm run test",
    "ci": "npm run check && npm run test:coverage && npm run size:limit",
    "perf": "npm run build && node scripts/perf-test.js",
    "prepare": "husky"
  },
  "keywords": [
    "config",
    "configuration",
    "yaml",
    "toml",
    "json",
    "env",
    "dotenv",
    "zero-dependency",
    "typescript",
    "plugin",
    "micro-kernel",
    "environment"
  ],
  "author": "Ersin KoÃ§",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ersinkoc/config.git"
  },
  "bugs": {
    "url": "https://github.com/ersinkoc/config/issues"
  },
  "homepage": "https://config.oxog.dev",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.1.7",
    "prettier": "^3.0.0",
    "terser": "^5.27.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^2.0.0"
  }
}
